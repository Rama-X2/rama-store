# Environment Variables untuk Website TopUp Game Premium
# Copy file ini menjadi .env.local dan sesuaikan dengan kebutuhan Anda

# Site Configuration
NEXT_PUBLIC_SITE_NAME="Rama Store - TopUp Game Premium"
NEXT_PUBLIC_SITE_URL="https://rama-store.vercel.app"
NEXT_PUBLIC_SITE_DESCRIPTION="Platform top up game terlengkap di Indonesia"

# API Endpoints (saat terintegrasi dengan backend)
NEXT_PUBLIC_API_URL="https://api.rama-store.com"
NEXT_PUBLIC_PAYMENT_API="https://payment.rama-store.com"

# Analytics & Tracking
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"
NEXT_PUBLIC_FACEBOOK_PIXEL_ID="1234567890"

# Social Media Links
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/ramastore"
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/ramastore"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/ramastore"
NEXT_PUBLIC_TELEGRAM_URL="https://t.me/ramastore"
NEXT_PUBLIC_WHATSAPP_NUMBER="6281234567890"

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL="support@rama-store.com"
NEXT_PUBLIC_BUSINESS_EMAIL="business@rama-store.com"

# Payment Gateway Configuration (saat terintegrasi)
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY="SB-Mid-client-xxxxxxxxxxxxxxxx"
NEXT_PUBLIC_XENDIT_PUBLIC_KEY="xnd_public_xxxxxxxxxxxxxxxx"

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Regional Settings
NEXT_PUBLIC_DEFAULT_CURRENCY="IDR"
NEXT_PUBLIC_DEFAULT_LOCALE="id-ID"
NEXT_PUBLIC_TIMEZONE="Asia/Jakarta"

# Performance Settings
NEXT_PUBLIC_IMAGE_QUALITY="85"
NEXT_PUBLIC_CACHE_DURATION="86400"

# Development Settings (only for development)
NODE_ENV="development"
ANALYZE="false"

# ===== ANTI-CLONE PROTECTION SETTINGS =====
# Konfigurasi keamanan untuk mencegah clone website

# Domain yang diizinkan (pisahkan dengan koma)
# Hanya domain ini yang bisa mengakses website
ALLOWED_DOMAINS="rama-store.vercel.app,rama-store-47at6s6j5-rama-x2s-projects.vercel.app,rama-store-git-main-rama-x2s-projects.vercel.app,rama-store-rama-x2s-projects.vercel.app,localhost:3000,localhost:3001"

# Domain preview yang diizinkan untuk Vercel deployment
# Kosongkan jika tidak ingin mengizinkan preview deployments
ALLOWED_PREVIEW_DOMAINS="rama-x2s-projects.vercel.app"

# Enable/disable anti-clone protection
# Set ke "false" hanya jika ingin menonaktifkan sementara
ANTI_CLONE_ENABLED="true"

# Secret key untuk bypass anti-clone (EMERGENCY ONLY)
# Gunakan string random yang kuat - JANGAN SHARE KE SIAPAPUN!
# Contoh penggunaan: https://yoursite.com?bypass=YOUR_SECRET_KEY
# atau header: x-bypass-secret: YOUR_SECRET_KEY
ANTI_CLONE_BYPASS_SECRET=""

# Mode strict untuk domain checking
# "true" = Blokir semua domain yang tidak ada di daftar
# "false" = Mode permissive untuk development
DOMAIN_CHECK_STRICT="true"

# Log level untuk monitoring akses (development only)
# "none", "basic", "detailed"
ACCESS_LOG_LEVEL="basic"

# Rate limiting untuk failed access attempts
# Maksimal percobaan akses dari domain tidak diizinkan per jam
MAX_FAILED_ATTEMPTS_PER_HOUR="100"

# Security headers configuration
ENABLE_SECURITY_HEADERS="true"
ENABLE_HSTS="true"
ENABLE_CSP="false"

# Custom error page configuration
CUSTOM_403_PAGE="true"
SHOW_DOMAIN_INFO_ON_ERROR="true"